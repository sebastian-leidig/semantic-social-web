{% extends 'SWebSemanticSocialWebBundle::base.html.twig' %}

{% block jumbotron %}

    <h1>Find Your Connections</h1>
    <p>Find relevant information based on your preferences.</p>

{% endblock %}


{% block body %}
    <h2>People sharing an interest in <i>{{ interest }}</i>:</h2>
    {% for item in results %}
      <p>
        <img src="http://www.usebackpack.com/assets/default_avatar.png" class="user-img"> {{ item.label }}
      </p>
    {% endfor %}

{% endblock %}
