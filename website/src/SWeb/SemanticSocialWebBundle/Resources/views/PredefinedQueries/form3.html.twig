{% extends 'SWebSemanticSocialWebBundle::base.html.twig' %}

{% block jumbotron %}

    <h1>Find Your Connections</h1>
    <p>Find relevant information based on your preferences.</p>

{% endblock %}


{% block body %}

    <p>
      <form action="{{ path('predefined_queries_handler') }}" method="POST">
        Select the Name of the Person : </br>
	<select name="pname">
	<option selected>{{result_findName[0].n}}
        {% for item in result_name %}
      <p>
        <option> {{ item.p }}
      </p>
	{% endfor %}
	</select>
        Select a Course : </br>
	<select name="course">
        {% for item in result_course %}
      <p>
        <option> {{ item.s }}
      </p>
	{% endfor %}
	</select>
        <input type="hidden" name="form" value="3">
        <input type="submit" value="Submit">
      </form>
    </p>

{% endblock %}
